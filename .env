# Database configuration for PostgreSQL (source database)
POSTGRES_DB=finance_db             # Name of the PostgreSQL database
POSTGRES_USER=postgres             # PostgreSQL username
POSTGRES_PASSWORD=postgres         # PostgreSQL password
POSTGRES_HOST=localhost            # Host where PostgreSQL is running
POSTGRES_PORT=5432                 # PostgreSQL port number

# Database configuration for TimescaleDB (destination time-series database)
TIMESCALE_DB=finance_timescale     # Name of the TimescaleDB database
TIMESCALE_USER=postgres            # TimescaleDB username
TIMESCALE_PASSWORD=postgres        # TimescaleDB password
TIMESCALE_HOST=localhost           # Host where TimescaleDB is running
TIMESCALE_PORT=5432                # TimescaleDB port number

# Observability
PROMETHEUS_METRICS_PORT=8001       # Port to expose Prometheus metrics

# Application Ports
FASTAPI_PORT=8000                  # Port for the FastAPI service
GRAPHQL_PORT=8002                  # Port for the GraphQL API service
